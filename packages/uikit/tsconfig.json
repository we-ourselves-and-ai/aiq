{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "moduleResolution": "Node"
  },
  "include": ["src", "types.d.ts"],
  "exclude": ["node_modules", "lib"]
}
